<script src="https://cdn.ckeditor.com/4.7.2/standard/ckeditor.js"></script>

<ul class="nav nav-tabs">
  <li role="presentation" class="active" id="add-post"> add product </li>
  <li role="presentation" id="products"> our product</li>
  <li role="presentation" id="orders"> orders </li>
</ul>
<div class="admin">
    <div class="add-post">
    <h1> add new products </h1>
 <form action="/admin/products" method="post">
            <div class="form-group">
                <label for="email">image tumble </label>
                <input type="text" id="image" name="imagePath" class="form-control" accept="image/*">
            </div>
            <div class="form-group">
                <label for="password">title</label>
                <input type="text" id="title" name="title" class="form-control">
            </div>
            <div class="form-group">
                <label for="email">description </label>
                <textarea type="text" id="description"  name="description" class="desc form-control"> </textarea>
            </div>
            <div class="form-group">
                <label for="password">Price</label>
                <input type="text" id="Price" name="Price" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">catagory</label>
                <input type="text" id="catagory" name="catagory" class="form-control">
            </div>
            <div class="form-group tumbles">
                                <label for="password">tumbles</label> <button class="add-tumb pull-right" type="button"><i class="fa fa-plus" aria-hidden="true"></i>
 </button>


               
            </div>
         
       
            
            
            <input class="btn btn-primary" value="add new product " type="submit">
</form>
</div>
<br>
<br>
<br>
<br>
<div class="products">
    {{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4 product">
                <div class="thumbnail">
                    
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>
                          
                        </div>
                        <br>
                        <div>
                              <a href="/admin/update/{{ this._id}}" class="btn btn-success " role="button">update</a>
                            <a href="/admin/delete/{{this._id}}" class="btn btn-danger pull-right" role="button">delete</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
</div>
<br>
<br>
<br>
<br>
<div class="orders">
     {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.cart.items }}
                            <li class="list-group-item">
                                
                                {{ this.item.title }} | {{ this.qty }} Units
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                    
                    <br>
                    <strong> address: {{ this.address }}</strong>
                    <br>
                    <strong> client name : {{ this.name }}</strong>
                </div>
            </div>
        {{/each}}
</div>
</div>
  <script>
            CKEDITOR.replace( 'description' );
        </script>