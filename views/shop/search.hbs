<div class="home-products">
    <h1> result for search : {{search}}  </h1>
    <div class="row">

        {{# each products }} {{#if this}}
        <div class="col-sm-6 col-md-4 ">

            <div class="product">
                <div class="thumbnail">
                    <a href="/product/{{this._id}}">
                    <img src="{{ this.imagePath}}" alt="..." class="img-responsive">
                     </a>
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <h5>
                            catagory : {{this.catagory }}
                            </h2>

                            <div class="clearfix">
                                <div class="price pull-left">${{ this.price }}</div>
                                <a href="/add-to-cart/{{ this.id }}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                            </div>
                    </div>
                </div>
            </div>

        </div>


        {{else}} {{/if}} {{/each}}
    </div>